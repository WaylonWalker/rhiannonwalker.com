{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://vega.github.io/editor/data/barley.json"
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "aggregate": "sum",
      "field": "yield",
      "type": "quantitative"
    },
    "y": {
      "field": "variety",
      "type": "nominal"
    },
    "color": {
      "field": "site",
      "type": "nominal"
    }
  },
  "width": 600,
  "height": 400
}